---
interface Props {
  href: string;
}

const { href } = Astro.props;

---

<a href={href} target="_blank"> 
  <slot name="icon"></slot>
  <slot name="text"></slot>
  <slot name="icon-after"></slot>
</a>

<style>
  a {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
  }

  a {
    color: #ababab;
  }

  a:hover {
    color: white;
  }

</style>