---
import SkillItem from "./SkillItem.astro";

const { title, skills } = Astro.props;
---

<div class="skills-container">
  <h3>{title}</h3>
  <ul>
    {
      skills.map((skill: any) => (
        <li>
          <SkillItem skill={skill} />
        </li>
      ))
    }
  </ul>
</div>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .skills-container > ul {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .skills-container > h3 {
    font-size: 1.5rem;
    color: #ababab;
    margin-top: 16px;
    margin-bottom: 16px;
    margin-left: 16px;
  }
</style>
