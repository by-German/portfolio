---
import Chip from "./ui/Chip.astro";
import ProjectItem from "./ProjectItem.astro";

const projects = [
	{
		title: "Vehicle Detection",
		description:
			"This project utilizes React along with Custom Vision for vehicle detection in videos. A vehicle detection model has been trained and exported from Custom Vision, which is integrated into the application.",
		image: "/images/projects/vehicles-detection.png",
		tags: ["React", "Custom Vision"],
		href: "https://custom-vision.netlify.app/"
	},
	{
		title: "CollabVR",
		description: "A virtual reality application that allows users to collaborate in a virtual environment.",
		image: "/images/projects/collabvr.png",
		tags: ["Angular", "NestJS", "Unity"],
		href: "https://doi.org/10.3390/computers13020040"
	},
	// TOOD: Music App, Pomodoro App
];

const { id } = Astro.props;
---

<section id={id}>
	<h2 class="sub-header">Projects</h2>
	<div class="project-list">
		{
			projects.map((project) => (
				<ProjectItem
					title={project.title}
					description={project.description}
					image={project.image}
					tags={project.tags}
					href={project.href}
				/>
			))
		}
	</div>
</section>

<section>
	<!-- TODO: Add other projects: Chrome extension (binding), sign detection (PDF), quoridor (PDF), CollabVR (PDF)-->
</section>

<style>
	.sub-header {
		font-size: 2rem;
		margin-top: 4rem;
		margin-bottom: 2rem;
		color: #ff6b6b;
	}
	.project-list {
		display: flex;
		gap: 16px;
		flex-direction: column;
	}
	@media (max-width: 600px) {
		.project-list {
			display: flex;
			flex-direction: column;
			flex-wrap: wrap;
			justify-content: center;
		}
	}
</style>