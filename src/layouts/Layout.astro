---
import MetaLayout from './MetaLayout.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<MetaLayout title={title}>
	<Header />
	<slot />
</MetaLayout>

<style is:global>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		color: white;
		line-height: 1.6;
	}

	a {
		text-decoration: none;
		color: white;
	}
</style>
